{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@css-mcp/core": ["./packages/core/src"],
      "@css-mcp/core/*": ["./packages/core/src/*"],
      "@css-mcp/cli": ["./packages/cli/src"],
      "@css-mcp/cli/*": ["./packages/cli/src/*"],
      "@css-mcp/server": ["./packages/server/src"],
      "@css-mcp/server/*": ["./packages/server/src/*"]
    }
  },
  "include": [],
  "exclude": ["node_modules", "dist", "lib", "build"]
}